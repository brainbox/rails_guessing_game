<h1>Listing games</h1>

<table>
  <tr>
    <th>The number</th>
    <th>Your guess</th>
    <th>Guesses left</th>
    <th>Won</th>
    
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.the_number %></td>
    <td><%= game.your_guess %></td>
    <td><%= game.guesses %></td>
    <td><%= game.won %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

